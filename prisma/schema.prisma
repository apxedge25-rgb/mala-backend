generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserStatus {
  ACTIVE
  BLOCKED
  BANNED
}

model User {
  id        String     @id @default(uuid())

  // Core identity (required)
  deviceId  String     @unique

  // Login methods (optional)
  email     String?    @unique
  phone     String?    @unique
  googleId  String?    @unique

  status    UserStatus @default(ACTIVE)

  // Relations
  settings  UserSetting?

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model UserSetting {
  id             String   @id @default(uuid())
  userId         String   @unique

  // Phase 3 preferences
  language       String   @default("en") // en | hi | te
  overlayEnabled Boolean  @default(false)

  // Explicit consents (Play Store critical)
  micConsent     Boolean  @default(false)
  screenConsent  Boolean  @default(false)

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(
    fields: [userId],
    references: [id],
    onDelete: Cascade
  )
}
